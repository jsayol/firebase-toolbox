{
  "productName": "firebase-toolbox",
  "appId": "com.jsayol.firebase-toolbox",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "dist",
    "target": ["portable"]
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "icon-512x512.png",
    "target": ["AppImage"],
    "executableName": "firebase-toolbox"
  }
}
