{
  "productName": "firebase-toolbox",
  "appId": "com.jsayol.firebase-toolbox",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!app-angular/src/",
    "!app-angular/e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!**/tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "app-angular/dist",
    "target": ["portable"]
  },
  "mac": {
    "icon": "app-angular/dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "app-angular/src/favicon.512x512.png",
    "target": ["AppImage"],
    "category": "Utility"
  }
}
